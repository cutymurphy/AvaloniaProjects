<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:AvaloniaApplication4.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
        x:Class="AvaloniaApplication4.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="File System Reflection App">

    <Design.DataContext>
        <vm:MainWindowViewModel />
    </Design.DataContext>

    <Grid Margin="10" RowDefinitions="Auto,Auto,Auto,Auto,Auto,*">
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10">
            <TextBox Width="500" Text="{Binding DllPath}" Watermark="Введите путь к DLL" />
            <Button Content="Загрузить DLL" Command="{Binding LoadDllCommand}" Margin="10,0,0,0" />
        </StackPanel>

        <TextBlock Grid.Row="1" Text="Классы:" FontWeight="Bold" Margin="0,0,0,5" />
        <ComboBox Grid.Row="2" ItemsSource="{Binding Classes}" SelectedItem="{Binding SelectedClass}" Margin="0,0,0,10">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}" />
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>

        <TextBlock Grid.Row="3" Text="Методы:" FontWeight="Bold" Margin="0,0,0,5" />
        <ComboBox Grid.Row="4" ItemsSource="{Binding Methods}" SelectedItem="{Binding SelectedMethod}" Margin="0,0,0,10">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}" />
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>

        <StackPanel Grid.Row="5">
            <TextBlock Text="Параметры:" FontWeight="Bold" Margin="0,0,0,5" />
            <ItemsControl ItemsSource="{Binding Parameters}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="{Binding Name}" Width="100" />
                            <TextBlock Text=" (" />
                            <TextBlock Text="{Binding Type.Name}" />
                            <TextBlock Text="): " />
                            <TextBox Width="200" Text="{Binding Value}" />
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            <Button Content="Выполнить" Command="{Binding ExecuteMethodCommand}" HorizontalAlignment="Left" Margin="0,10,0,0" />
            <TextBlock Text="{Binding ExecutionResult}" Margin="0,10,0,0" Foreground="Red" />
        </StackPanel>
    </Grid>
</Window>